@{
    ViewBag.Title = "Home";
}

    <script id="results-template" type="text/x-handlebars-template">
        {{#if errors}}
        {{#each errors}}
        <div class="error">
            {{this.message}}
        </div>
        {{/each}}
        {{else}}
    <div>
        {{table.rows.length }} Results
    </div>
        <table class="data">
            <thead>
                <tr></tr>
                <tr>
                    {{#each table.columns}}
                    <th>{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each table.rows}}
                <tr>
                    {{#each this.values}}
                        {{#if (isNull this)}}
                        <td>NULL</td>
                        {{else}}
                        <td>{{this}}</td>
                        {{/if}}
                    {{/each}}
                </tr>
            {{/each}}
            </tbody>
        </table>
         {{/if}}
</script>

<div id="sitenav-wrapper" class="wrapper">
    <div id="sitenav-wrap" class="wrap xxw8">
        <span id="tagline">
            Query FlightAware FlightXML API using SQL
        </span>
    </div>
</div>

<div id="content-wrap" class="wrap xxw8 xcw8">
    <div>
        <h2>Flight Query</h2>
    </div>
    <div id="discussion" class="xxw8 xcw8">
        <div style="width: 760px; float:left">
            <div>Enter Query:</div>
           
            <div id="code">
            </div>
            <div>
                <button type="button" class="button" id="run">Run Query</button>
            </div>
      

            <div id="loading" class="none">
                <img src="@Url.Content("~/img/ajax-loader.gif")" alt="loading" />
            </div>
        </div>
        <div id="sidebar">
            <div class="green-form">
                <div class="help">FlightAware API credentials</div>
                <fieldset>
                    <label>Username:</label>
                    <input class="input-text" title="Username" id="username" name="username" type="text" value="">
                </fieldset>
                <fieldset>
                    <label>API Key:</label>
                    <input class="input-text" title="Password" id="pass" name="pass" type="password" value="">
                </fieldset>
            </div>
            <div class="title">Examples</div>
            <div id="examples">
                <a href="" query="airportInfo">Austin Airport Info</a>
                <a href="" query="austinDepartures">Austin Airport Departures</a>
                <a href="" query="austinDeparturesFriendly">Austin Airport Departures Friendly</a>
                <a href="" query="austinDeparturesNoStatus">Austin Airport Departures Status</a>
            </div>
        </div>
        <div id="results" style="float:left; width:1070px; overflow-x:auto">

        </div>
    </div>

</div>


